# Production Environment Variables
# Copy this to .env.local for production deployment

# WhatsApp Business API Configuration
WHATSAPP_TOKEN=your_production_access_token_here
PHONE_NUMBER_ID=your_production_phone_number_id_here
VERIFY_TOKEN=your_secure_verify_token_here
WEBHOOK_URL=https://yourdomain.com/webhook

# Server Configuration
PORT=3001
NODE_ENV=production

# Database (Optional - for message persistence)
DATABASE_URL=your_database_connection_string_here

# Security
JWT_SECRET=your_jwt_secret_key_here
CORS_ORIGIN=https://yourdomain.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=your_sentry_dsn_here

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
